{% extends "base.html.twig" %}

{% block title %}Suppression d'un film{% endblock %}

{% block content %}
    <p>Voulez-vous supprimer ce film ?</p>
    <main class="container mt-4">
        <table class="table table-bordered table-striped table-responsive table-hover">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Year</th>
                    <th scope="col">Type</th>
                    <th scope="col">Director</th>
                    <th scope="col">Synopsis</th>
                    <th scope="col">Created At</th>
                    <th scope="col">Updated At</th>
                    <th scope="col">Deleted At</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>{{ film.title }}</td>
                    <td>{{ film.year }}</td>
                    <td>{{ film.type }}</td>
                    <td>{{ film.director }}</td>
                    <td>{{ film.synopsis }}</td>
                    <td>{{ film.createdAt|date('Y-m-d H:i:s') }}</td>
                    <td>{{ film.updatedAt|date('Y-m-d H:i:s') }}</td>
                    <td>{{ film.deletedAt ? film.deletedAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>
    </main>
    <!-- Formulaire envoyÃ© pour supprimer un film -->
    <form method="POST" action="/films/list">
        <button type="submit" class="btn btn-danger">Supprimer le film</button>
    </form>

{% endblock %}